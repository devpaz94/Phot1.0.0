<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/default_image"
        android:layout_margin="15dp"
        android:id="@+id/request_image" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Full Name"
        android:layout_above="@+id/email_text_view"
        android:layout_toEndOf="@+id/request_image"
        android:layout_marginBottom="7dp" />

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/request_image"
        android:layout_marginBottom="14dp"
        android:layout_toEndOf="@+id/request_image"
        android:text="Email" />

    <ImageView
        android:id="@+id/decline_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/name_text_view"
        android:layout_marginEnd="19dp"
        android:src="@mipmap/ic_remove_circle_outline_black_48dp" />

    <ImageView
        android:id="@+id/accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/decline_btn"
        android:src="@mipmap/ic_add_circle_outline_black_48dp" />





</RelativeLayout>